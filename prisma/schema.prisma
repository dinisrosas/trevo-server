generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  username  String    @unique
  password  String
  role      UserRole  @default(SELLER)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  sid       Int       @default(autoincrement())
  betbooks  Betbook[]

  @@map("users")
}

model Betbook {
  id          String   @id @default(cuid())
  bettor      String
  sellerId    String   @map("seller_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  totalAmount Float
  sid         Int      @default(autoincrement())
  seller      User     @relation(fields: [sellerId], references: [id])
  bets        Bet[]

  @@map("betbooks")
}

model Bet {
  id        String   @id @default(cuid())
  target    Float
  pick      String
  amount    Float
  award     Float?
  upDown    Boolean? @map("up_down")
  betbookId String   @map("betbook_id")
  lotteryId String   @map("lottery_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  sid       Int      @default(autoincrement())
  betbook   Betbook  @relation(fields: [betbookId], references: [id])
  lottery   Lottery  @relation(fields: [lotteryId], references: [id])

  @@map("bets")
}

model Lottery {
  id        String      @id @default(cuid())
  name      String
  type      LotteryType
  result    String?
  date      DateTime
  isoDate   String      @map("iso_date")
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")
  mode      LotteryMode
  sid       Int         @default(autoincrement())
  bets      Bet[]

  @@unique([type, isoDate], name: "type_iso_date")
  @@map("lotteries")
}

enum UserRole {
  SELLER
  ADMIN
}

enum LotteryType {
  EM
  TL
  M1
  LC
  LP
  JE
}

enum LotteryMode {
  DRAW
  LOTTERY
}
